        <item name="colorSecondary">@color/blue_secondary</item>
        <item name="colorSecondaryVariant">@color/blue_secondary_dark</item>
        <item name="colorOnSecondary">@color/blue_secondary_light</item>
        <item name="colorSurface">@color/blue_surface</item>
        <item name="android:fontFamily">@font/alegreya</item>
